<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/tab_bg_color"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/message_show_sent_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user1" />

    <LinearLayout
        android:id="@+id/m_show_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/m_show_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/m_show_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/message_show_sent_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/main_color_gray"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/message_show_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="TextView"
                        android:textSize="12sp"
                        android:textColor="@color/main_color_gray_light"
                        />
                </LinearLayout>



                    <Button
                        android:id="@+id/del_msg_btn"
                        style="@style/gray_dk_btn"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="X"/>



            </RelativeLayout>



            <TextView
                android:id="@+id/message_show_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="TextView"
                android:textColor="@color/main_color_gray_light"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/message_show_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="TextView"
            android:textColor="@color/main_color_gray_light"
            />
    </LinearLayout>


</LinearLayout>
